<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingTop="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_scholarship"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:backgroundTint="@color/phinmaGreen"
        android:clickable="false"
        android:focusable="true"
        app:cardCornerRadius="24dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_scholarshipTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/phinmaGreen"
            android:drawableEnd="@drawable/sch_ic_rightarrow"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/josefin_sans_bold"
            android:gravity="center_horizontal|center_vertical"
            android:padding="16dp"
            android:text="PHINMA SCHOLARSHIP"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="HardcodedText,TextSizeCheck" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>