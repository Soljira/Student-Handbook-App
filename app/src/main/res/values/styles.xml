<resources>

    <style name="BottomRoundedCard" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rounderImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="menu">@menu/bottom_nav</item>
        <item name="itemIconSize">30dp</item>
        <item name="itemPaddingTop">4dp</item>
        <item name="itemPaddingBottom">4dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemBackground">@color/phinmaGreen</item>
        <item name="itemIconTint">@color/navbar_icon_colors</item>
        <item name="itemTextColor">@color/navbar_icon_colors</item>
        <item name="itemActiveIndicatorStyle">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="itemRippleColor">@color/phinmaYellow</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="SideDrawerView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemTextAppearance">@style/CustomMenuTextAppearance</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="headerLayout">@layout/drawer_header</item>"
        <item name="menu">@menu/drawer_menu</item>
    </style>

    <style name="CustomMenuTextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:fontFamily">@font/merriweather_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTopAppBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/josefinsans_regular</item> <!-- Use your custom font -->
        <item name="android:textColor">@color/phinmaYellow</item> <!-- Set your desired color -->
        <item name="android:textSize">24sp</item> <!-- Adjust text size as needed -->
    </style>


</resources>